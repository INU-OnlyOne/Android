<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15sp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/ic_armchair_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="좌석별 대기 현황"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="3sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seatKeyword1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="#좌석키워드1"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="3sp"
                android:layout_weight="1"
                android:progressBackgroundTint="@color/INUYellow"
                android:progressTint="@color/INUYellow" />

            <TextView
                android:id="@+id/seat1Curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat1Slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="/"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/searMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="3sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seatKeyword2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="#좌석키워드2"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="3sp"
                android:layout_weight="1"
                android:progressBackgroundTint="@color/INUYellow"
                android:progressTint="@color/INUYellow" />

            <TextView
                android:id="@+id/seat2Curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat2Slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="/"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat2Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="3sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seatKeyword3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="#좌석키워드3"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="3sp"
                android:layout_weight="1"
                android:progressBackgroundTint="@color/INUYellow"
                android:progressTint="@color/INUYellow" />

            <TextView
                android:id="@+id/sear3Curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat3Slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="/"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat3Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_marginRight="3sp"
            android:layout_marginBottom="3sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seatKeyword4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="#좌석키워드4"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBar4"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="3sp"
                android:layout_weight="1"
                android:progressBackgroundTint="@color/INUYellow"
                android:progressTint="@color/INUYellow" />

            <TextView
                android:id="@+id/sear4Curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat4Slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="/"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seat4Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3sp"
                android:maxLength="3"
                android:text="0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:src="@drawable/time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="시간별 인기"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</FrameLayout>